<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".fragment.DiscoverFragment">

    <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/spinner_discover"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            app:ms_text_color="@android:color/black"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <com.mancj.materialsearchbar.MaterialSearchBar
            style="@style/MaterialSearchBarLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:id="@+id/searchBar_discover"/>

    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/rv_search_result"
            android:visibility="gone"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="@string/please_specify"
            android:fontFamily="@font/secular_one"
            android:textAlignment="center"
            android:visibility="visible"
            android:id="@+id/discover_tv_notice"/>

</LinearLayout>